<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/InputItemTitle"
        android:text="@string/layoutitem_workstatus_workingtime_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_input_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/zero"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="end"/>

        <TextView
            android:id="@+id/tv_sum_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layoutitem_workstatus_workingtime_common_unit"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:textSize="20sp"
            android:ems="3"/>

    </LinearLayout>
</LinearLayout>