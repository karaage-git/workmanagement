<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.resister.salary.IncomeInputFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_frame_border"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layoutitem_income_top"
            android:textSize="20sp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_display_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/zero"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layoutitem_income_top_unit"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            android:textSize="20sp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  基本給  -->
            <TextView
                style="@style/InputItemTitle"
                android:text="@string/layoutitem_income_baseincome_title" />
            <TextView
                style="@style/InputItemSubTitle"
                android:text="@string/layoutitem_income_baseincome_subtitle" />
            <LinearLayout
                style="@style/InputFieldLinearLayout" >

                <EditText
                    android:id="@+id/et_base"
                    style="@style/InputFieldEditText"
                    android:hint="@string/edittext_hint_income_baseincome"
                    android:inputType="number"
                    android:autofillHints="no"
                    android:maxLength="9" />
                <TextView
                    style="@style/InputFieldUnit"
                    android:text="@string/layoutitem_income_baseincome_unit"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/iv_base_check_ic"
                    style="@style/InputFieldIcon"
                    android:src="@drawable/ic_baseline_error_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_base_error"
                style="@style/InputItemErrorText"
                android:text="@string/layoutitem_income_baseincome_error"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <!--  残業手当  -->
            <TextView
                style="@style/InputItemTitle"
                android:text="@string/layoutitem_income_overtime_title" />
            <TextView
                style="@style/InputItemSubTitle"
                android:text="@string/layoutitem_income_overtime_subtitle" />
            <LinearLayout
                style="@style/InputFieldLinearLayout" >

                <EditText
                    android:id="@+id/et_overtime"
                    style="@style/InputFieldEditText"
                    android:hint="@string/edittext_hint_income_overtime"
                    android:inputType="number"
                    android:autofillHints="no"
                    android:maxLength="5"/>
                <TextView
                    style="@style/InputFieldUnit"
                    android:text="@string/layoutitem_income_overtime_unit"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/iv_overtime_check_ic"
                    style="@style/InputFieldIcon"
                    android:src="@drawable/ic_baseline_error_24" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_overtime_error"
                style="@style/InputItemErrorText"
                android:text="@string/layoutitem_income_overtime_error"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <!--  その他  -->
            <TextView
                style="@style/InputItemTitle"
                android:text="@string/layoutitem_income_other_title" />
            <TextView
                style="@style/InputItemSubTitle"
                android:text="@string/layoutitem_income_other_subtitle" />
            <LinearLayout
                style="@style/InputFieldLinearLayout" >

                <EditText
                    android:id="@+id/et_other"
                    style="@style/InputFieldEditText"
                    android:hint="@string/edittext_hint_income_other"
                    android:inputType="numberDecimal"
                    android:autofillHints="no" />
                <TextView
                    style="@style/InputFieldUnit"
                    android:text="@string/layoutitem_income_other_unit"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/iv_other_check_ic"
                    style="@style/InputFieldIcon"
                    android:src="@drawable/ic_baseline_error_24" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_other_error"
                style="@style/InputItemErrorText"
                android:text="@string/layoutitem_income_other_error"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>