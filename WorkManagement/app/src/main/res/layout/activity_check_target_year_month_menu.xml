<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.salary.viewcontroller.CheckTargetYearMonthActivity"
    android:orientation="vertical">

    <!-- ツールバー  -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyToolBar"
        tools:ignore="MissingConstraints" />

    <!--  次画面遷移用のボタン  -->
    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:layout_margin="40dp" />

    <!--  キーボード表示を制御するため、フォーカスを当てられるようにしておく  -->
    <TextView
        android:id="@+id/tv_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_checktargetyearmonth_when"
        android:layout_marginStart="@dimen/margin_top_menu_side"
        android:layout_marginEnd="@dimen/margin_top_menu_side"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <!--  YYYYMM入力欄  -->
    <EditText
        android:id="@+id/et_target"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/edittext_hint_checktargetyearmonth_yyyymm"
        android:textSize="30sp"
        android:layout_marginStart="@dimen/margin_top_menu_side"
        android:layout_marginEnd="@dimen/margin_top_menu_side"
        android:gravity="center"
        android:maxLength="6"
        android:autofillHints="no"
        android:inputType="number"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_700"
        android:layout_marginStart="@dimen/margin_top_menu_side"
        android:layout_marginEnd="@dimen/margin_top_menu_side"
        android:gravity="center" />

</LinearLayout>