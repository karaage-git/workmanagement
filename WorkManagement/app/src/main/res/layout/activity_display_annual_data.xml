<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.analyze.viewcontroller.DisplayAnnualDataActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyToolBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_annual_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_topmenu_analyze_annual_data"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ScrollView
        android:id="@+id/sv_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_annual_data"
        app:layout_constraintBottom_toTopOf="@id/horizontal_line"
        android:paddingHorizontal="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="項目名"
                    android:textSize="15sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="値"
                    android:textSize="15sp"
                    android:gravity="center"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/sv_data"
        app:layout_constraintBottom_toTopOf="@id/btn_comparison" />

    <Button
        android:id="@+id/btn_comparison"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/layout_item_display_annual_data_button"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="@dimen/margin_top_menu_side"
        android:layout_marginEnd="@dimen/margin_top_menu_side"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>