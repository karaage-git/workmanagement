<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape

            android:shape="rectangle">
            <solid
                android:color="@color/white" />
            <corners
                android:radius="10dp" />
            <stroke
                android:color="@color/black"
                android:width="1dp" />
